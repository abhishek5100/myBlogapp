<h1>New comment</h1>

<%= form_with model: @comment do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>


  <div >
  <%= form.label :blog_id%>
  <%= form.collection_select :blog_id, Blog.all, :id, :tittle, {prompt: "Select a course"} %>
</div>

  <div>
    <%= form.submit %>
  </div>
<% end %>